{
  "name": "oxform-react",
  "version": "0.1.0",
  "description": "Oxform is a lean and flexible framework-agnostic form library.",
  "author": "Frantss <frantss.bongiovanni@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "imports": {
    "#*": "./src/*.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --config-loader unrun",
    "test": "vitest",
    "check:types": "tsc --noEmit",
    "check:package": "publint --strict",
    "publish": "bun publish --access public",
    "prepublish": "bun run build"
  },
  "dependencies": {
    "@standard-schema/spec": "catalog:oxform",
    "@tanstack/react-store": "^0.8.0",
    "oxform-core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "publint": "catalog:oxform",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tsdown": "catalog:oxform",
    "typescript": "catalog:oxform",
    "vitest": "catalog:oxform",
    "vitest-browser-react": "^2.0.2",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  }
}
