{
  "name": "oxform-core",
  "version": "0.1.0",
  "description": "Oxform is a lean and flexible framework-agnostic form library.",
  "author": "Frantss <frantss.bongiovanni@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "imports": {
    "#*": "./src/*.ts"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./schema": {
      "require": "./dist/schema.cjs",
      "import": "./dist/schema.js"
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --config-loader unrun",
    "test": "vitest",
    "check:types": "tsc --noEmit",
    "check:package": "publint --strict"
  },
  "dependencies": {
    "@standard-schema/spec": "catalog:oxform",
    "@tanstack/store": "^0.8.0",
    "remeda": "^2.32.0",
    "type-fest": "^5.3.1"
  },
  "devDependencies": {
    "publint": "catalog:oxform",
    "tsdown": "catalog:oxform",
    "typescript": "catalog:oxform",
    "vitest": "catalog:oxform",
    "zod": "^4.2.1"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "require": "./dist/index.cjs",
        "import": "./dist/index.js"
      },
      "./schema": {
        "require": "./dist/schema.cjs",
        "import": "./dist/schema.js"
      },
      "./package.json": "./package.json"
    }
  }
}
