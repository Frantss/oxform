{
  "name": "oxform-root",
  "version": "0.1.0",
  "private": true,
  "description": "Oxform is a lean and flexible framework-agnostic form library.",
  "author": "Frantss <frantss.bongiovanni@gmail.com>",
  "license": "MIT",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalogs": {
      "oxform": {
        "@standard-schema/spec": "^1.1.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16",
        "@vitest/browser-playwright": "^4.0.16",
        "playwright": "^1.57.0",
        "tsdown": "^0.18.1"
      }
    }
  },
  "scripts": {
    "build": "bun --filter '*' build",
    "test": "bun --filter '*' test",
    "lint:types": "bun --filter '*' lint:types",
    "lint:rules": "oxlint --type-aware",
    "lint:format": "oxfmt --check",
    "lint:fix": "oxlint --type-aware --fix --fix-suggestions --fix-dangerously && oxfmt"
  },
  "devDependencies": {
    "@vitest/browser-playwright": "catalog:oxform",
    "bumpp": "^10.3.2",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "tsdown": "^0.18.1",
    "typescript": "catalog:oxform",
    "vitest": "catalog:oxform"
  }
}
