{
  "name": "oxform-root",
  "version": "0.1.0",
  "private": true,
  "description": "Oxform is a lean and flexible framework-agnostic form library.",
  "author": "Frantss <frantss.bongiovanni@gmail.com>",
  "license": "MIT",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "catalogs": {
      "oxform": {
        "@standard-schema/spec": "^1.1.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16",
        "@vitest/browser-playwright": "^4.0.16",
        "playwright": "^1.57.0",
        "tsdown": "^0.18.1",
        "publint": "^0.3.16"
      }
    }
  },
  "scripts": {
    "build": "bun --filter '*' build",
    "build:dev": "bun --filter '*' build --watch",
    "postbuild": "bun run fix:format",
    "test": "bun --filter '*' test",
    "check:package": "bun --filter '*' check:package",
    "check:types": "bun --filter '*' check:types",
    "check:rules": "oxlint --type-aware",
    "check:format": "oxfmt --check",
    "fix:rules": "oxlint --type-aware --fix --fix-suggestions",
    "fix:format": "oxfmt",
    "fix:all": "bun run fix:rules && bun run fix:format",
    "publish": "bun --filter '*' publish",
    "prepublish": "bun run check:rules && bun run check:format && bun run check:types && bun check:package"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@vitest/browser-playwright": "catalog:oxform",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "tsdown": "^0.18.1",
    "typescript": "catalog:oxform",
    "vitest": "catalog:oxform"
  }
}
